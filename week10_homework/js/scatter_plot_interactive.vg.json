{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "The Prices of Houses in Melbourne",
  "data": {
    "url": "https://raw.githubusercontent.com/DmnNg/FIT3179/main/week10_homework/data/clean_melbourne_housing.csv"
  },
  "params": [
    {
      "name": "Price_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 9000000,
        "step": 500000,
        "name": "Minimum Price: "
      }
    },
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Eastern Metropolitan",
          "Eastern Victoria",
          "Northern Metropolitan",
          "Northern Victoria",
          "South-Eastern Metropolitan",
          "Southern Metropolitan",
          "Western Metropolitan",
          "Western Victoria"
        ],
        "labels":[
          "Show All",
          "Eastern Metropolitan",
          "Eastern Victoria",
          "Northern Metropolitan",
          "Northern Victoria",
          "South-Eastern Metropolitan",
          "Southern Metropolitan",
          "Western Metropolitan",
          "Western Victoria"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.BuildingArea > 0"},
    {"filter": "datum.LandSize > 0"},
    {"filter": "datum.Price > Price_Above"},
    {"filter": "Region_selection == null || datum.RegionName == Region_selection"}
  ],
  "encoding": {
    "x": {
      "field": "LandSize",
      "type": "quantitative",
      "title": "Land Area",
      "axis": {"tickCount": 9},
      "scale": {"type": "log", "domain": [1, 45000]}
    },
    "y": {
      "field": "BuildingArea",
      "type": "quantitative",
      "title": "Building Area",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [1, 3500]}
    }
  },
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["RegionName"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Price",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100000, 250000, 500000, 750000, 1000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "RegionName",
          "type": "nominal",
          "scale": {
            "domain": [
              "Eastern Metropolitan",
              "Eastern Victoria",
              "Northern Metropolitan",
              "Northern Victoria",
              "South-Eastern Metropolitan",
              "Southern Metropolitan",
              "Western Metropolitan",
              "Western Victoria"
            ],
            "range": [
              "#1b9e77",
              "#d95f02",
              "#7570b3",
              "e7298a",
              "66a61e",
              "e6ab02",
              "a6761d",
              "666666"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "RegionName", "type": "nominal"},
          {"field": "Suburb", "type": "nominal"},
          {"field": "Postcode", "type": "nominal"},
          {"field": "Price", "type": "quantitative", "format": ","},
          {"field": "LandSize", "type": "quantitative", "format": ","},
          {"field": "BuildingArea", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}
