{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Average Property Prices by Council",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/DmnNg/FIT3179/main/melbourne_housing_market/js/Aus-Melbourne02.json",
    "format": {
          "type": "topojson",
          "feature": "Aus-Melbourne02"
        }
  },
  "transform": [{
    "lookup": "properties.locname",
     "from": {
      "data": {
         "url": "https://raw.githubusercontent.com/DmnNg/FIT3179/main/melbourne_housing_market/data/choropleth_data.csv"
        },
        "key": "Council",
        "fields": ["AvgPrice"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "AvgPrice",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [200000, 300000, 400000, 500000, 600000, 700000, 800000, 900000, 1000000],
        "range": ["#f7fcfd", "#e5f5f9", "#ccece6", "#99d8c9", "#66c2a4", "#41ae76", "#238b45", "#006d2c", "#00441b"]
      }
    },
    "tooltip": [
      {"field": "properties.locname", "type": "nominal", "title": "Council"},
      {"field": "AvgPrice", "type": "quantitative", "title": "Average Property Price"}
    ]
  }
}
