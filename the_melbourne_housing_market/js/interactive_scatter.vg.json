{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 400,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/DmnNg/FIT3179/main/the_melbourne_housing_market/data/region_council_suburb_avg_data.csv"
  },
  "params": [
    {
      "name": "Price_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 3000000,
        "step": 500000,
        "name": "Minimum Average Price: "
      }
    },
    {
      "name": "Council_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "City of Banyule",
          "City of Bayside",
          "City of Boroondara",
          "City of Brimbank",
          "City of Casey",
          "City of Darebin",
          "City of Frankston",
          "City of Glen Eira",
          "City of Greater Dandenong",
          "City of Hobsons Bay",
          "City of Hume",
          "City of Kingston",
          "City of Knox",
          "City of Manningham",
          "City of Maribyrnong",
          "City of Maroondah",
          "City of Melbourne",
          "City of Melton",
          "City of Monash",
          "City of Moonee Valley",
          "City of Moreland",
          "City of Port Phillip",
          "City of Stonnington",
          "City of Whitehorse",
          "City of Whittlesea",
          "City of Wyndham",
          "City of Yarra",
          "Shire of Nillumbik",
          "Shire of Yarra Ranges",
          "Shire of Cardinia"
        ],
        "labels":[
          "Show All",
          "City of Banyule",
          "City of Bayside",
          "City of Boroondara",
          "City of Brimbank",
          "City of Casey",
          "City of Darebin",
          "City of Frankston",
          "City of Glen Eira",
          "City of Greater Dandenong",
          "City of Hobsons Bay",
          "City of Hume",
          "City of Kingston",
          "City of Knox",
          "City of Manningham",
          "City of Maribyrnong",
          "City of Maroondah",
          "City of Melbourne",
          "City of Melton",
          "City of Monash",
          "City of Moonee Valley",
          "City of Moreland",
          "City of Port Phillip",
          "City of Stonnington",
          "City of Whitehorse",
          "City of Whittlesea",
          "City of Wyndham",
          "City of Yarra",
          "Shire of Nillumbik",
          "Shire of Yarra Ranges",
          "Shire of Cardinia"
        ],
        "name": "Council Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.AvgPrice > Price_Above"},
    {"filter": "Council_selection == null || datum.Council == Council_selection"}
  ],
  "encoding": {
    "x": {
      "field": "AvgLandSize",
      "type": "quantitative",
      "title": "Average Land Area (Square Metres)",
      "axis": {"tickCount": 6},
      "scale": {"domain": [100, 6000]}
    },
    "y": {
      "field": "AvgBuildingArea",
      "type": "quantitative",
      "title": "Average Building Area (Square Metres)",
      "axis": {"tickCount": 8},
      "scale": {"domain": [50, 400]}
    }
  },
  "layer": [
    {
      "selection": {
        "grid": {"type": "interval", "bind": "scales"},
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "AvgPrice",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 2000000, 3000000],
            "range": [50, 100, 150, 500]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "Eastern Metropolitan",
              "Eastern Victoria",
              "Northern Metropolitan",
              "Northern Victoria",
              "South-Eastern Metropolitan",
              "Southern Metropolitan",
              "Western Metropolitan",
              "Western Victoria"
            ],
            "range": [ 
              "#fb9a99",
              "#e31a1c",
              "#b2df8a",
              "#33a02c",
              "#a6cee3",
              "#1f78b4",
              "#fdbf6f",
              "#ff7f00"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Region", "type": "nominal"},
          {"field": "Council", "type": "nominal"},
          {"field": "Suburb", "type": "nominal"},
          {"field": "AvgLandSize", "type": "quantitative", "format": ",", "title": "Land Area"},
          {"field": "AvgBuildingArea", "type": "quantitative", "format": ",", "title": "Building Area"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -10,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Suburb", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Suburb'] == 'Clayton' || datum['Suburb'] == 'Melbourne' || datum['Suburb'] == 'Mickleham'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Region", "type": "nominal"},
          {"field": "Council", "type": "nominal"},
          {"field": "Suburb", "type": "nominal"},
          {"field": "AvgLandSize", "type": "quantitative", "format": ",", "title": "Land Area"},
          {"field": "AvgBuildingArea", "type": "quantitative", "format": ",", "title": "Building Area"}
        ]
      }
    }
  ]
}
