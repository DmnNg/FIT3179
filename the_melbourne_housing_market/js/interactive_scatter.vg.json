{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Relationship between Rooms and Bathrooms",
  "data": {
    "url": "https://raw.githubusercontent.com/DmnNg/FIT3179/main/the_melbourne_housing_market/data/interactive_scatter_data.csv"
  },
  "params": [
    {
      "name": "Price_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1400000,
        "step": 200000,
        "name": "Minimum Price: "
      }
    },
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Eastern Metropolitan",
          "Eastern Victoria",
          "Northern Metropolitan",
          "Northern Victoria",
          "South-Eastern Metropolitan",
          "Southern Metropolitan",
          "Western Metropolitan",
          "Western Victoria"
        ],
        "labels":[
          "Show All",
          "Eastern Metropolitan",
          "Eastern Victoria",
          "Northern Metropolitan",
          "Northern Victoria",
          "South-Eastern Metropolitan",
          "Southern Metropolitan",
          "Western Metropolitan",
          "Western Victoria"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.AveragePrice > Price_Above"},
    {"filter": "Region_selection == null || datum.Region == Region_selection"}
  ],
  "encoding": {
    "x": {
      "field": "AverageRooms",
      "type": "quantitative",
      "title": "Average Number of Rooms",
      "scale": {"domain": [2, 4]},
      "axis": {"tickCount": 3}
    },
    "y": {
      "field": "AverageBathrooms",
      "type": "quantitative",
      "title": "Average Number of Bathrooms",
      "scale": {"domain": [1, 2]},
      "axis": {"tickCount": 3}
    }
  },
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["Region"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "AveragePrice",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [300000, 600000, 900000, 1200000],
            "range": [100, 300, 500, 1000, 2000]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "Eastern Metropolitan",
              "Eastern Victoria",
              "Northern Metropolitan",
              "Northern Victoria",
              "South-Eastern Metropolitan",
              "Southern Metropolitan",
              "Western Metropolitan",
              "Western Victoria"
            ],
            "range": [
              "#1b9e77",
              "#d95f02",
              "#7570b3",
              "#e7298a",
              "#66a61e",
              "#e6ab02",
              "#a6761d",
              "#666666"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "region_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Region", "type": "nominal"},
          {"field": "AveragePrice", "type": "quantitative", "format": ","},
          {"field": "AverageRooms", "type": "quantitative"},
          {"field": "AverageBathrooms", "type": "quantitative"}
        ]
      }
    }
  ]
}
